xterm*faceName: Inconsolata:size=10:antialias=true
!xterm*faceName: DejaVu Sans Mono:size=8
xterm*faceNameDoublesize: Source Han Sans:size=8:antialias true
xterm*metaSendsEscape: true
xterm*bellIsUrgent: true
xterm*vt100.translations: #override \
	<Btn1Up>: select-end(PRIMARY, CLIPBOARD, CUT_BUFFER0) \n\
	Shift <KeyPress> Up:      scroll-back(1, line) \n\
	Shift <KeyPress> Down:    scroll-forw(1, line) \n\
	Ctrl Shift <KeyPress> C:  select-end(PRIMARY, CLIPBOARD, CUT_BUFFER0) \n\
	Ctrl Shift <KeyPress> V:  insert-selection(CLIPBOARD, CUT_BUFFER0, PRIMARY) \n
URxvt.font: xft:Inconsolata:size=10
URxvt.scrollBar: false
URxvt.letterSpace: -1
URxvt.perl-ext-common: default,matcher
URxvt.url-launcher: /usr/bin/firefox
URxvt.matcher.button: 1

! special
*.foreground:   #b7b8b9
*.background:   #0c0d0e
*.cursorColor:  #b7b8b9

! black
*.color0:       #0c0d0e
*.color8:       #737475

! red
*.color1:       #e31a1c
*.color9:       #e31a1c

! green
*.color2:       #31a354
*.color10:      #31a354

! yellow
*.color3:       #dca060
*.color11:      #dca060

! blue
*.color4:       #3182bd
*.color12:      #3182bd

! magenta
*.color5:       #756bb1
*.color13:      #756bb1

! cyan
*.color6:       #80b1d3
*.color14:      #80b1d3

! white
*.color7:       #b7b8b9
*.color15:      #fcfdfe
